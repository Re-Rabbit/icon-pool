//@require "styles/space"
@require "styles/layout"
@require "styles/reset"

/// Var.

$bg1 = #201f2d
$bg2 = #0f0f1b
$cc  = #bdbdbd
$pc  = #b39ddb

$goldenRatio = 1.618033


export-reset()

body
  cc $cc $bg1

body
  pl 5rem

$mainw = 54rem

:local(.main)
  w $mainw


:local(.icon)
  $w = ($mainw / 8)

  dis ib
  size $w ($w * $goldenRatio)
  ta cen
  cur ptr

  //&.active
  //  :local(.iconSvg) path
  //    fill rgba($pc, 0.88) !important

:local(.iconSvg)
  py 1.5rem

  svg
    size 4rem
  path
    fill rgba($pc, 0.72) !important
    

:local(.iconCode)
  cc rgba($cc, 0.72)
  fz 0.8rem


.block-fixed
  &-top
    fill(t, true)
  &-left
    fill(l, true)
  &-bottom
    fill(b, true)
  &-right
    fill(r, true)

.block-center
  mx a

.aside
  size 100%
  min-width 5rem
  bg $bg2

:export
  icon icon
  aside aside
  fixedTop fixed-top
